<% include ../layout/header.ejs %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->
    <% include ../layout/menu.ejs %>
    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Danh sách khách hàng</h1>
                    </div>
                    <div class="pull-right hidden-xs">

                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12">
                <section class="box ">
                    <header class="panel_header">
                        <div class="actions panel_actions pull-right">
                            <a class="box_toggle fa fa-chevron-down"></a>
                            <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                            <a class="box_close fa fa-times"></a>
                        </div>
                    </header>
                    <div class="content-body">
                        <div class="row">
                            <% if(response_message){ %>
                            <div class="alert alert-success"><%= response_message%></div>
                            <% } %>
                            <div class="col-xs-12">
                                <!-- ********************************************** -->
                                <table id="example" class="display table table-hover table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Mã</th>
                                            <th>Tên khách hàng</th>
                                            <th>Email</th>
                                            <th>Chức năng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var id = 0 %>
                                        <% data.forEach(function(item){ id ++%>
                                            <% if (!item.isDeleted) { %>
                                            <tr>
                                                <td><%= id%></td>
                                                <td><%= item.fullname%></td>
                                                <td><%= item.email%></td>
                                                <td>
                                                    <!-- <a href="/admin/user/sua/<%= item.id %>.html">Xem |</a> -->
                                                    <button class="btn btn-default" ><a href="/admin/user/sua/<%= item.id %>.html">Xem</a></button>
                                                    <button class="btn btn-default" ><a href="/admin/user/xoa/<%= item.id %>">Xóa</a></button>
                                                    <!-- <a href="/admin/user/xoa/<%= item.id %>">Xoá</a> -->
                                                </td>
                                            </tr>
                                            <% } %>
                                        <%})%>
                                    </tbody>
                                </table>
                                <!-- ********************************************** -->
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows "></div>
</div>

<% include ../layout/footer.ejs %>
